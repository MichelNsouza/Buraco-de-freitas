{
  "functions": {
    "api/*.php": {
      "runtime": "vercel-php@0.7.0"
    }
  },
  "routes": [
    { "src": "/(api|css|img|js|uploads|componentes|src)/(.*\.(php|css|js|png|jpg|svg|webp))", "dest": "/$1/$2" },
    { "src": "/src/view/(denuncia|faleConosco|inicio)/(index.php)", "dest": "/src/view/$1/$2" },
    { "src": "/src/(controller|model|repositorio)/(.*\.php)", "dest": "/src/$1/$2" },
    { "src": "/(.*)", "dest": "/index.php" }
  ]
}
